<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kadek.tripgo.AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Fragment"
        android:id="@+id/textView3" />

    <Button
        android:id="@+id/account_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Logout" />
    <Button
        android:id="@+id/account_conv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/account_logout_button"
        android:layout_alignStart="@+id/account_logout_button"
        android:layout_marginBottom="34dp"
        android:text="Conv" />
    <Button
        android:id="@+id/account_admin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_logout_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:visibility="invisible"
        android:text="Admin" />



</RelativeLayout>
