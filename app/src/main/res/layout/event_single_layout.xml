<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/shadow">

    <TextView
        android:id="@+id/event_single_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="102dp"
        android:text="Judul Event"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/event_litle_description"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="2dp"
        android:text="Deskripsi"
        android:layout_below="@id/event_single_name"/>

    <ImageView
        android:id="@+id/event_image_preview"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/event_litle_description"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:padding="1dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/placeholder" />


</RelativeLayout>