<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">


    <TextView
        android:id="@+id/popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Add Product"
        android:textSize="26dp" />

    <Spinner
        android:id="@+id/popup_spinner"
        android:layout_below="@+id/popup_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"></Spinner>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/popup_link"
        android:layout_below="@id/popup_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Link Product" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/popup_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/popup_link"
        android:layout_below="@id/popup_link"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/colorWhite" />

</RelativeLayout>