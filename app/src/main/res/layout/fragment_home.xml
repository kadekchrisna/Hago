<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kadek.tripgo.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/home_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/home_button_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/baseline_camera_alt_black_24"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/home_button_search"
            android:background="#fff"
            android:padding="20dp"
            android:text="Scan QR"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/home_button_search"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:drawableTop="@drawable/baseline_search_black_36"
            android:background="#fff"
            android:paddingTop="14dp"
            android:layout_alignTop="@id/home_button_qr"
            android:layout_alignBottom="@id/home_button_qr"
            android:layout_alignParentEnd="true"
            />

        <LinearLayout
            android:id="@+id/home_linear_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_button_qr"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_button_bahari"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bahari"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Wisata Bahari" />
            <Button
                android:id="@+id/home_button_budaya"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/culture"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Wisata Budaya" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_linear_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_linear_top"
            android:orientation="vertical">


            <Button
                android:id="@+id/home_button_cagaralam"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/nature"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Wisata Alam" />
            <Button
                android:id="@+id/home_button_agrowisata"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/artificial"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Wisata Buatan" />

        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>
