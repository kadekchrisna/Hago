<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kadek.tripgo.EventActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/event_app_bar" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_event_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/event_app_bar" >

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addevent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="33dp"
        android:clickable="true"
        app:backgroundTint="@color/colorWhite"
        app:srcCompat="@drawable/baseline_add_black_36"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="510dp" />




</RelativeLayout>
