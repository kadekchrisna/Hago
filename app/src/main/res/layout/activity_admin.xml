<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/admin_app_bar"/>


    <Button
        android:id="@+id/account_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Event" />

    <Button
        android:id="@+id/account_stuff_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_event_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Stuff" />


    <Button
        android:id="@+id/account_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/account_event_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Place" />



</RelativeLayout>