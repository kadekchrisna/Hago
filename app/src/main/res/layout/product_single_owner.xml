<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="8dp" android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
    android:background="@drawable/shadow">

    <ImageView
        android:id="@+id/product_owner_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/product_owner_place"
        android:src="@drawable/placeholder"/>

    <TextView
        android:id="@+id/product_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/product_owner_image"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Product"
        android:textSize="20dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/product_owner_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_owner_name"
        android:layout_alignStart="@id/product_owner_name"
        android:layout_marginTop="2dp"
        android:text="Product Price"
        android:textSize="15dp"


        />
    <TextView
        android:id="@+id/product_owner_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_owner_price"
        android:layout_alignStart="@id/product_owner_price"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:text="Place"
        android:textSize="15dp"


        />

</RelativeLayout>